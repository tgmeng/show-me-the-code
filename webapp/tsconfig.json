{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./out",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
